# Kafka Configuration
KAFKA_BROKER_ADDRESS=localhost:9092
KAFKA_TRANSACTIONS_TOPIC=transactions

# Data Configuration
TRANSACTION_DATA_PATH=data/raw/transactions.csv

# Streaming Configuration
STREAM_DELAY_SECONDS=0.1
LOOP_DATASET=false
USE_TIME_COLUMN=false

# Kafka Producer Configuration
KAFKA_BATCH_SIZE=16384
KAFKA_LINGER_MS=10

# Logging Configuration
LOG_LEVEL=INFO

# AWS Configuration (if using cloud services)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# S3 Configuration (if downloading data from S3)
# S3_BUCKET_NAME=your-fraud-detection-bucket
# S3_DATA_KEY=raw/creditcard.csv
